<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:background="#34AEE8"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:id="@+id/chat_new_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/post_owner_name_in_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/back_button_post_activity"
            android:text="Taha Saber"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_inchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/post_owner_name_in_chat"
            android:layout_marginRight="5dp"
            android:text="انا في الجيزة ورايح الهرم.."
            android:textColor="#ffffff" />


    </RelativeLayout>

</android.support.v7.widget.Toolbar>