<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/noti_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/me" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/noti_img"
        android:layout_toEndOf="@+id/noti_img"
        android:layout_toRightOf="@+id/noti_img"
        android:text="22hr"
        android:textSize="10dp"
        android:textColor="#607D8B" />


    <TextView
        android:id="@+id/noti_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Taha Saber"
        android:maxWidth = "200dip"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/noti_img"
        android:layout_toEndOf="@+id/noti_img" />

    <TextView
        android:id="@+id/cat_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Car Sharing"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/wants" />

    <TextView
        android:id="@+id/wants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text=" posted in "
        android:textColor="#607D8B"
        android:layout_toRightOf="@id/noti_name" />


</RelativeLayout>
